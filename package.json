{
  "name": "cupid-bot",
  "version": "1.0.0",
  "description": "WhatsApp Cupid Bot with MongoDB integration and Mercado Pago payments",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "canvas": "^3.1.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.1",
    "figlet": "^1.7.0",
    "mercadopago": "^2.7.0",
    "moment": "^2.29.4",
    "mongoose": "^8.1.1",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "stripe": "^18.2.1",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.11.19",
    "@types/qrcode": "^1.5.5",
    "@types/qrcode-terminal": "^0.12.2",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  }
}
